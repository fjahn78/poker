{
  "name": "Go",
  "image": "mcr.microsoft.com/devcontainers/go:0-1-bullseye",
  "customizations": {
    "vscode": {
      "extensions": [
        "streetsidesoftware.code-spell-checker",
        "waderyan.gitblame",
        "donjayamanne.githistory",
        "eamodio.gitlens",
        "oderwat.indent-rainbow",
        "christian-kohler.path-intellisense",
        "patbenatar.advanced-new-file",
        "foxundermoon.shell-format",
        "Gruntfuggly.todo-tree",
        "piotrpalarz.vscode-gitignore-generator",
        "golang.go",
        "MS-CEINTL.vscode-language-pack-de",
        "ukoloff.win-ca",
        "deerawan.vscode-faker",
        "trunk.io",
        "Artymaury.template-finder",
        "DavidAnson.vscode-markdownlint",
        "berublan.vscode-log-viewer",
        "RLNT.keep-a-changelog",
        "GitLab.gitlab-workflow",
        "balazs4.gitlab-pipeline-monitor",
        "logerfo.gitlab-notifications",
        "GitHub.vscode-pull-request-github",
        "felipecaputo.git-project-manager",
        "mhutchie.git-graph",
        "ms-azuretools.vscode-docker",
        "ryanluker.vscode-coverage-gutters",
        "mads-hartmann.bash-ide-vscode",
        "threecomma.vscode-readme",
        "sleistner.vscode-fileutils"
      ],
      "settings": {
        "dev.containers.copyGitConfig": true,
        "editor.defaultFormatter": "trunk.io",
        "[go]": {
          "editor.insertSpaces": true,
          "editor.formatOnSave": true,
          "editor.codeActionsOnSave": {
            "source.organizeImports": true,
            "source.fixAll": true
          },
          "editor.suggest.snippetsPreventQuickSuggestions": true
        },
        "gopls": {
          "formatting.gofumpt": false
        }
      }
    }
  },
  "features": {
    "ghcr.io/guiyomh/features/golangci-lint:0": {},
    "ghcr.io/guiyomh/features/gomarkdoc:0": {},
    "ghcr.io/guiyomh/features/goreleaser:0": {}
  },
  "postCreateCommand": "bash ./.devcontainer/setup.sh",
  "postStartCommand": "nohup bash -c 'godoc -http=:6060 &'",
  "portsAttributes": {
    "6060": {
      "label": "godoc"
    }
  }
}
